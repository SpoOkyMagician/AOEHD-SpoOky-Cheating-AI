; ------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------
; Note: Castle Age
; Note: Gonna balance it out a bit more...
; ------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------

(defrule
	(unit-type-count-total monk < 450)
	(current-age == castle-age)
	(can-train monk)
	=>
	(train monk)
)

(defrule
	(unit-type-count-total missionary < 450)
	(current-age == castle-age)
	(can-train missionary)
	=>
	(train missionary)
)

