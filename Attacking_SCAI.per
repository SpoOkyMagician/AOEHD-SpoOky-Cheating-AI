; ------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------
; (Priority 7) - Attacking
; Description: Sets the Attack Timer and when to attack.
; ------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------

(defrule
	(true)
=>
	(enable-timer 1 30)
	(disable-self)
)

(defrule
	(timer-triggered 1)
=>
	(attack-now)
	(disable-timer 1)
	(enable-timer 1 30)
)